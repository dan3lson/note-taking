display_error_message();

function display_error_message() {
	var new_note_container = $('.create-edit-note-container');
	var partial = "<%= j render(partial: 'notes/error_message', locals: { message: @message }) %>";
	
	new_note_container.hide();
	new_note_container.children()[0].remove();
	new_note_container.prepend(partial).fadeIn(400);
}
