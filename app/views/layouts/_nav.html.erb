<section id="header-container">
	<div class="row center">
		<div class="col-sm-6 col-sm-offset-3">
			<h1><%= todays_date %></h1>
			<p>
				<% if session[:azure_access_token] %>
					Hi <%= session[:username] %>,
					<%= time_of_day_greeting %>.
					It's currently <%= current_time %>.
				<% else %>
					<%= link_to "Please log in", get_login_url %> to view your meetings
					and manage your notes.
				<% end %>
			</p>
		</div>
	</div>
</section>

<section id="filter-container">
	<div class="row center">
		<div class="col-xs-6" id="today-link">
			<%= link_to meetings_path, remote: true do %>
				<i class="fa fa-list-alt fa-3x"></i>
				<br>
				Today
				<span class="badge">
					<%= num_meetings_for_today %>
				</span>
			<% end %>
		</div>
		<div class="col-xs-6 medium-gray">
			<i class="fa fa-sticky-note-o fa-3x"></i>
			<br>
			Notes
		</div>
	</div>
</section>
