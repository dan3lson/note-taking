<div class="row" id="meeting-show-header">
	<div class="col-sm-8 col-sm-offset-2">
		<div class="card" id="meeting-show-page">
			<div class="inline-block meeting-time">
				<small>
					<%= meeting.start_date.strftime("%I:%M %p") %>
					<br>
					<span class="medium-gray">
						<%= meeting.end_date.strftime("%I:%M %p") %>
					</span>
				</small>
			</div>
			<div class="inline-block card-left-padding">
				<%= shorten(meeting.subject) %>
				<br>
				<%= render "notes/note_type_icons", meeting: meeting %>
				<br>
			</div>
		</div>
		<div class="card">
			<p>
				<i class="fa fa-group"></i>
				Attendees (<%= num_attendees(meeting) %>)
			</p>
			<br>
			<p>
				<% attendees(meeting).each_with_index do |name, i| %>
					<%= name %><%= "," unless last_item?(i, num_attendees(meeting)) %>
				<% end %>
			</p>
		</div>
		<div class="card">
			<div class="pull-right" id="pre-note-btn-container">
				<%= render "notes/note_crud_links",
					meeting: meeting,
					note_exists: meeting.has_pre_notes?,
					type: "Pre" %>
			</div>
			<p>
				<i class="fa fa-circle-o"></i>
				Pre Notes
			</p>
			<br>
			<p id="pre-note-body">
				<% if meeting.has_pre_notes? %>
					<%= meeting.pre_note_content %>
				<% else %>
					<small class="medium-gray">Empty</small>
				<% end %>
			</p>
		</div>
		<div class="card">
			<div class="pull-right" id="current-note-btn-container">
				<%= render "notes/note_crud_links",
					meeting: meeting,
					note_exists: meeting.has_current_notes?,
					type: "Current" %>
			</div>
			<p>
				<i class="fa fa-dot-circle-o"></i>
				Current Notes
			</p>
			<br>
			<p id="current-note-body">
				<% if meeting.has_current_notes? %>
					<%= meeting.current_note_content %>
				<% else %>
					<small class="medium-gray">Empty</small>
				<% end %>
			</p>
		</div>
		<div class="card">
			<div class="pull-right" id="post-note-btn-container">
				<%= render "notes/note_crud_links",
					meeting: meeting,
					note_exists: meeting.has_post_notes?,
					type: "Post" %>
			</div>
			<p>
				<i class="fa fa-circle"></i>
				Post Notes
			</p>
			<br>
			<p id="post-note-body">
				<% if meeting.has_post_notes? %>
					<%= meeting.post_note_content %>
				<% else %>
					<small class="medium-gray">Empty</small>
				<% end %>
			</p>
		</div>
		<div class="card" id="create-note-container">
			<%= render "notes/form", meeting: meeting, note: @note %>
		</div>
	</div>
</div>
